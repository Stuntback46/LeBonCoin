<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add New Comment to <%= article.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/articles/<%= article._id %>/comments/" method="POST">
				<div class="form-group">
					<input class ="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				
				<div class="form-group">
					<button class ="btn btn-large btn-primary btn-block">Submit!
					</button>
				</div>
							</form>
							<a href="/articles/">Go back</a>
		</div>
		
	</div>
</div>
